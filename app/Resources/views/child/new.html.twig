    <script>


        function changeColorblack(){
            var inputVal = document.getElementById("age").value;
            document.getElementById("level").value=inputVal-2;
            if (document.getElementById("level").value<=0){
                document.getElementById("level").value=1;
            }

            if ($.isNumeric($("#age").val())) {
                $("#age").css('border-color: #ddffdd');
            }
            else{
                $("#age").css("border-color: #c00000");
            }




            var name = $("#firstname").val();
            if(name != '')
            {

                $("#firstname").removeClass("is-invalid");
                $("#firstname").addClass('is-valid');

            }
            else{
                $("#firstname").removeClass("is-valid");
                $("#firstname").addClass('is-invalid');
            }
            var cover = $("#lastname").val();
            if(cover != '')
            {

                $("#lastname").removeClass("is-invalid");
                $("#lastname").addClass('is-valid');

            }
            if(cover == ''){
                $("#lastname").removeClass("is-valid");
                $("#lastname").addClass('is-invalid');
            }

            var description = $("#level").val();
            if(description != '')
            {

                $("#level").removeClass("is-invalid");
                $("#level").addClass('is-valid');

            }
            if(description == ''){
                $("#level").removeClass("is-valid");
                $("#level").addClass('is-invalid');
            }



        }

    </script>

