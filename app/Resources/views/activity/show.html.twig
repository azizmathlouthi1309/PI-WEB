{% extends 'admin1.html.twig' %}

{% block afterheader %}

    <div class="card">
        <div class="card-header">
            <h2>Activity Details</h2>

        </div>
        <div class="card-body">
            <h4 class="card-title ">Activity Name</h4> <br>
            <p class=card-text"> {{ activity.name }}</p>
            <h4 class="card-title">Description</h4>

            <p class="card-text">{{ activity.description }}</p>
            <h4 class="card-title">Photo</h4> <br>
            <img class="img-fluid " src="{{ asset('/images/') }}{{ activity.path }}"  alt="Photo"> <br>


            <div class="row">
                <div class="col-md-3">

                        <div class="card-body">
                    <a class="btn btn-light " href="{{ path('activity_edit', { 'id': activity.id }) }}">
                        <i class="fas fa-edit">
                        </i>
                        Update
                    </a> <br>
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash">
                        </i>Delete</button>
                    {{ form_end(delete_form) }} <br>
                <a class="btn  bg-gradient-warning btn-sm" href="{{ path('activity_index') }}">Back to the list</a>
                        </div></div>
        </div>

     </div>
    </div>
{% endblock %}
