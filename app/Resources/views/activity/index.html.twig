{% extends 'admin1.html.twig' %}

{% block afterheader %}

<div class="content" style="min-height: 1416.81px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-10">
                    <h1>Kindo Activities</h1>
                </div>
                <div class="col-sm-2">

                    <a type="button"  href="{{ path('activity_new')}} " class="btn  btn-success">Add New Activity</a>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <form method="post">
                    <div class="box-header with-border">


                        <div class="box-tools pull-right">
                            <div class="has-feedback">
                                <input type="text"  name="name" class="form-control input-sm" placeholder="Search..." id="myInput">

                            </div>
                        </div>
                        <!-- /.box-tools -->
                    </div>
                    <div class="searchbar">


                    </div>

                    <!------ Include the above in your HEAD tag ---------->
                    <script language="JavaScript" src="https://code.jquery.com/jquery-1.11.1.min.js" type="text/javascript"></script>
                    <script language="JavaScript" src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js" type="text/javascript"></script>
                    <script language="JavaScript" src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>
                    <script>
                        $(document).ready(function(){
                            $("#myInput").on("keyup", function() {
                                var value = $(this).val().toLowerCase();
                                $("#myTable tr").filter(function() {
                                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                });
                            });
                        });
                    </script>

                    <table  id="myTable" class="table table-striped projects">

                        <thead>
                        <tr>
                            <th style="width: 20%">
                                Activity Name
                            </th>
                            <th style="width: 40%">
                                Description
                            </th>
                            <th style="width: 25%">
                                Image
                            </th>



                        </tr>
                        </thead>
                        {% for activity in activities %}
                        <tbody>
                        <tr>
                            <td>
                                <a href="{{ path('activity_show', { 'id': activity.id }) }}" > {{ activity.name }}</a>
                            </td>
                            <td>
                                <a>
                                    {{ activity.description }}

                                </a>
                                <br>

                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="{{ asset('/images/') }}{{ activity.path }}" >

                                </ul>
                            </td>


                            <td class="project-actions text-right">

                                <a class="btn btn-info " href="{{ path('activity_show', { 'id': activity.id }) }}">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Details
                                </a>
                                <a> </a>
                                <br>
                                <a class="btn btn-light " href="{{ path('activity_edit', { 'id': activity.id }) }}">
                                    <i class="fas fa-edit">
                                    </i>
                                    Update
                                </a>

                            </td>

                        </tr>


                        {% endfor %}

                        </tbody>
                    </table>
                </form>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body p-0">
            </div>

            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <div class="col-md-8"> </div>
    </section>
    <!-- /.content -->
</div>

{% endblock %}
