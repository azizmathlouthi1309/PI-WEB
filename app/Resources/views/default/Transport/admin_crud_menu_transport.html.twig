<script>
    function controledesaisie() {


        var age = $("#age").val();
        if(age != '')
        {

            $("#age").removeClass("is-invalid");
            $("#age").addClass('is-valid');

        }
        else{
            $("#age").removeClass("is-valid");
            $("#age").addClass('is-invalid');
        }
        var phonenumber = $("#phonenumber").val();
        if(phonenumber != '')
        {

            $("#phonenumber").removeClass("is-invalid");
            $("#phonenumber").addClass('is-valid');

        }
        else{
            $("#phonenumber").removeClass("is-valid");
            $("#phonenumber").addClass('is-invalid');
        }
        var name = $("#adress").val();
        if(name != '')
        {

            $("#adress").removeClass("is-invalid");
            $("#adress").addClass('is-valid');

        }
        else{
            $("#adress").removeClass("is-valid");
            $("#adress").addClass('is-invalid');
        }
        var cover = $("#lastname").val();
        if(cover != '')
        {

            $("#lastname").removeClass("is-invalid");
            $("#lastname").addClass('is-valid');

        }
        if(cover == ''){
            $("#lastname").removeClass("is-valid");
            $("#lastname").addClass('is-invalid');
        }

        var description = $("#firstname").val();
        if(description != '')
        {

            $("#firstname").removeClass("is-invalid");
            $("#firstname").addClass('is-valid');

        }
        if(description == ''){
            $("#firstname").removeClass("is-valid");
            $("#firstname").addClass('is-invalid');
        }

    }
</script>
{% endblock %}