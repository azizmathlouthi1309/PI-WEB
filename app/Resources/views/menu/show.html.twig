<h1>Menu</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Dateday</th>
                <td>{{ menu.dateDay }}</td>
            </tr>
            <tr>
                <th>Plate1</th>
                <td>{{ menu.plate1 }}</td>
            </tr>
            <tr>
